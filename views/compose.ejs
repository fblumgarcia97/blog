<%- include("partials/header") -%>
<h1>COMPOSE</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="postTitle" autocomplete="off">
    </div>
    <div class="form-group">
        <label>Content</label>
        <textarea name="postBody" class="form-control" autocomplete="off"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>
<%- include("partials/footer") -%>